{
    "layer": "top",
    "position": "top",
    // FIX: Reverted to original height and spacing
    "height": 31,
    "spacing": 8,
    "margin-top": 2,
    "margin-left": 6,
    "margin-right": 6,

    "modules-left": ["hyprland/workspaces", "mpris", "custom/updates"],
    "modules-center": ["clock"],
    "modules-right": ["cpu", "memory", "disk", "backlight", "pulseaudio", "network", "bluetooth", "tray", "battery", "custom/power"],

    "custom/launcher": {
        "format": "ÔåÉ",
        "on-click": "wofi --show drun",
        "tooltip": false
    },
    
    

    // Minimal workspace configuration
    "hyprland/workspaces": {
        "format": "{name}",
        // "format-icons": {
        //     "active": "‚óè",
        //     "default": "‚óã",
        //     "urgent": "!"
        // },
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": []
        },
        "on-click": "activate",
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "smooth-scrolling-threshold": 1
    },

    "mpris": {
        "format": "{player_icon} {dynamic}",
        "format-paused": "{status_icon} <i>{dynamic}</i>",
        "player-icons": {
            "default": "‚è∏",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚ñ∂"
        },
        "dynamic-len": 35,
        "title-len": 20
    },

    "clock": {
        "format": "{:%I:%M %p}",
        "tooltip-format": "<big>{:%A, %B %d}</big>"
    },

    "cpu": {
        "format": "Ôíº {}%",
        "interval": 2,
        "tooltip-format": "CPU Usage: {}%"
    },
    "memory": {
        "format": "Û∞çõ {}%",
        "interval": 2,
        "tooltip-format": "Memory Usage: {}%"
    },
    "disk": {
        "format": "ÔÇ† {}%",
        "interval": 30
    },

    "backlight": {
        "format": "{icon} {percent}%",
        "format-icons": ["Û∞Éü"],
        "on-scroll-up": "brightnessctl set 5%+",
        "on-scroll-down": "brightnessctl set 5%-"
    },

    "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-alt": "{icon}", // Show only the icon on alternate click
    "format-muted": "Û∞ñÅ Muted",
    "format-icons": { "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"] },
    "on-click": "pavucontrol",
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle", // Mute on right click
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%"
},

    "network": {
        "format-wifi": "Ôá´  {essid}",
        "format-ethernet": "ÔÉÅ",
        "format-disconnected": "Û∞§Æ  Disconnected",
        "tooltip-format-wifi": "{ipaddr} | {signalStrength}%",
        "on-click": "nm-connection-editor"
    },
        "custom/updates": {
        "format": "{}",
        "interval": 900, // Check every 15 minutes
        "exec": "~/.config/hypr/scripts/check_updates.sh",
        "on-click": "kitty -e sudo pacman -Syu"
    },

    "bluetooth": {
        "format": "Ôäì",
        "format-connected": "Ôäì {device_alias}",
        "format-disabled": "Û∞Ç≤",
        "tooltip-format": "Bluetooth: {device_alias}",
        "on-click": "blueman-manager"
    },

    "battery": {
        "states": { "warning": 30, "critical": 15 },
        "format": "{icon} {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

    "tray": {
        "icon-size": 16,
        "spacing": 10
    },

    "custom/power": {
        "format": "ÔÄë",
        "on-click": "wlogout",
        "tooltip": false
    }
}